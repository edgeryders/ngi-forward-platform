source 'https://rubygems.org'

gem "middleman", "~> 4.2"
gem "middleman-livereload", "~> 3.4"
gem "middleman-minify-html", "~> 3.4"

# https://github.com/karlfreeman/middleman-dotenv
gem 'middleman-dotenv', '~> 2.0'

# The Kramdown Markdown processor.
# https://github.com/gettalong/kramdown
# This is preferred over Redcarpet because it supports rendering Markdown found in block-level HTML. Which is how
# Discourse also handles it.
gem 'kramdown'

# https://github.com/rails/rails/tree/master/activesupport
gem 'activesupport'
