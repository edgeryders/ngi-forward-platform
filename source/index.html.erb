<%# Intro section with full-width image before the main content section. %>
<% content_for :page_header do %>
  <div class="page-header">
    <div class="page-header-overlay">

      <div class="page-header-content container pt-5 pb-2 pb-md-4">
        <h1 class="page-header-title px-3 px-md-5">
          Green, beautiful spaces for the 99%
        </h1>

        <div class="page-header-details">
          <div class="lead">
          The Reef is a new kind of living space. It uses the power of community to help 
          people transition to a happier, healthier, greener, more social lifestyle.
          </div>
        </div>
        
      </div>

    </div>
  </div>
<% end %>

<section id="home-page" class="mt-5">
  <%= get_discourse_html_post(topic_id: 11340, post_id: 2) %>
</section>

<section id="slides" class="mt-5">
  <% slides = %w[01 02 03 04 05 06 07 08 09] %>
  <div id="carousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% slides.each do |s| %>
        <li data-target="#carousel" data-slide-to="<%= s.to_i %>" class="<%= 'active' if s == slides.first %>"></li>
      <% end %>
    </ol>
    <div class="carousel-inner">
      <% slides.each do |s| %>
        <div class="carousel-item <%= 'active' if s == slides.first %>">
          <%= image_tag "storyboard-slide-#{s}.jpg", class: 'd-block w-100' %>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</section>
