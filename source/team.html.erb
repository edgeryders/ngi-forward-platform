<%# Section for menu link "Team Contacts" %>
<div class="section-bg-5">
  <section id="team" class="container">

      <h1>Team</h1>

      <% team_data = get_team() %>
      <% team_data.each do |member| %>

        <div class="card card-teammember mb-4">
          <div class="row no-gutters">

            <div class="col-md-4 d-flex flex-wrap align-items-center">
              <img src="<%= member['photo_url'] %>" class="card-img">
            </div>

            <div class="col-md-8">
              <div class="card-body">

                <h5 class="card-title"><%= member['name'] %> | <%= member['role'] %></h5>

                <div class="card-text"><%= member['description'] %></div>
                <div class="card-text">
                  <%= link_to member['email'], "mailto:#{member['email']}" %> |
                  <%= link_to "@#{member['username']} on Edgeryders", "https://edgeryders.eu/u/#{member['username']}" %>
                </div>

              </div>
            </div>

          </div>
        </div>

      <% end %>

  </section>
</div>
