<h1 class="text-center mt-3 mb-5"><%= t("navbar.share_your_experience") %></h1>

<%= get_discourse_post(section: 'share_your_experience_intro', locale: I18n.locale) %>

<% stats = get_tell_your_story_stats %>

<section id="share-your-experience-stats" class="mt-5 mb-5">
  <div class="row">
    <div class="col-md-4">
      <div class="card card-stats mb-4">
        <div class="card-body d-flex align-content-center justify-content-center">
          <h1><%= stats.user_count %></h1>
        </div>
        <div class="card-footer font-weight-bold text-center">
          <%= t('share_your_experience.stats_users') %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card card-stats mb-4 ml-md-4">
        <div class="card-body d-flex align-content-center justify-content-center">
          <h1><%= stats.topic_count %></h1>
        </div>
        <div class="card-footer font-weight-bold text-center">
          <%= t('share_your_experience.stats_stories') %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card card-stats mb-4 ml-md-4  ">
        <div class="card-body d-flex align-content-center justify-content-center">
          <h1><%= stats.comment_count %></h1>
        </div>
        <div class="card-footer font-weight-bold text-center">
          <%= t('share_your_experience.stats_comments') %>
        </div>
      </div>
    </div>
  </div>
</section>

<%= partial 'table_activities', locals: {json_data: get_tell_your_story_topics} %>
